@model ASPdotNET_CUOIMON.Models.ModelView.AccountView
@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="fashion_section">
    <div class="container">
        <div class="card shadow p-4 mb-5 bg-white rounded">
            <h2 class="text-center mb-4">Chi tiết tài khoản</h2>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Họ và tên:</strong> @Model.FullName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Điện thoại:</strong> @Model.Phone</p>
                    <p><strong>Vai trò:</strong> @(Model.Role == "Admin" ? "Quản trị viên" : "Khách hàng")</p>
                    <p><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="@Url.Action("Index", "AdminAccount")" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
