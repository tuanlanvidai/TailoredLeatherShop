@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    var categories = ViewBag.CategorySummaries as List<ASPdotNET_CUOIMON.Models.ModelView.CategoryHomeView>;
}

<div class="fashion_section">
    <div class="container">
        <h1 class="fashion_taital">DANH MỤC SẢN PHẨM</h1>
        <div class="fashion_section_2">
            <div class="row">
                @if (categories != null && categories.Count > 0)
                {
                    foreach (var item in categories)
                    {
                        <div class="col-lg-4 col-sm-4">
                            <div class="box_main">
                                <h4 class="shirt_text">@item.CategoryName</h4>
                                <div class="tshirt_img">
                                    <img src="@Url.Content("~/Content/Client/" + item.ImageUrl)"
                                         alt="@item.CategoryName" />
                                </div>
                                <div class="btn_main d-flex justify-content-between align-items-center">
                                    <div class="buy_bt">
                                        <span style="color: #f26522; font-weight: 600;">
                                            @item.ProductCount sản phẩm
                                        </span>
                                    </div>
                                    <div class="seemore_bt">
                                        <a href="@Url.Action("ByCategory", "Product", new { categoryId = item.CategoryId })">
                                            Xem thêm
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12"><em>Chưa có danh mục sản phẩm nào</em></div>
                }
            </div>
        </div>
    </div>
</div>


