@model ASPdotNET_CUOIMON.Models.ModelView.AccountProfileView
@{
    ViewBag.Title = "Chỉnh sửa thông tin";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow p-4">
        <h3 class="text-center mb-4">Chỉnh sửa thông tin</h3>

        @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.UserId)

            <div class="form-group mb-3">
                <label>Tài khoản:</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group mb-3">
                <label>Họ và tên:</label>
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label>Số điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success w-100 mt-3">Lưu thay đổi</button>
        }

        <div class="text-center mt-3">
            <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
