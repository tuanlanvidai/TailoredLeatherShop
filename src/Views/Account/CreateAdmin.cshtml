@model ASPdotNET_CUOIMON.Models.ModelView.AccountRegisterView
@{
    ViewBag.Title = "Thêm tài khoản Admin";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="fashion_section">
    <div class="container">
        <h2 class="text-center mb-4">Thêm tài khoản Admin</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                @using (Html.BeginForm("CreateAdmin", "AdminAccount", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Username">Tên tài khoản</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Nhập tên tài khoản", required = "required" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Password">Mật khẩu</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu", required = "required" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="FullName">Họ và tên</label>
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Nhập họ và tên", required = "required" })
                    </div>

                    <div class="form-group">
                        <label for="Email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "Nhập email", required = "required" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Phone">Số điện thoại</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Nhập số điện thoại", required = "required" })
                    </div>

                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Thêm Admin</button>
                    <a href="@Url.Action("Index", "AdminAccount")" class="btn btn-secondary">Quay lại</a>
                }
            </div>
        </div>
    </div>
</div>
