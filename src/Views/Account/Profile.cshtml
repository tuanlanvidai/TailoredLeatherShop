@model ASPdotNET_CUOIMON.Models.ModelView.AccountProfileView
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow p-4">
        <h3 class="text-center mb-4">Thông tin tài khoản</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }

        <div class="form-group mb-3">
            <label>Tài khoản:</label>
            <input type="text" class="form-control" value="@Model.Username" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Họ và tên:</label>
            <input type="text" class="form-control" value="@Model.FullName" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Email:</label>
            <input type="text" class="form-control" value="@Model.Email" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Số điện thoại:</label>
            <input type="text" class="form-control" value="@Model.Phone" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Vai trò:</label>
            <input type="text" class="form-control" value="@Model.Role" readonly />
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary">Chỉnh sửa thông tin</a>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Đăng xuất</a>
        </div>
    </div>
</div>
